{
  "name": "ai-code-review-assistant",
  "displayName": "AI Code Review Assistant",
  "description": "A powerful VS Code extension that automates code review using AI to provide senior-level feedback on your code changes.",
  "version": "0.3.0",
  "publisher": "vuquangkhtn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vuquangkhtn/ai-code-review-assistant.git"
  },
  "homepage": "https://github.com/vuquangkhtn/ai-code-review-assistant#readme",
  "bugs": {
    "url": "https://github.com/vuquangkhtn/ai-code-review-assistant/issues"
  },
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "code review",
    "AI",
    "copilot",
    "amazon-q",
    "cursor-ai",
    "chatgpt",
    "typescript",
    "javascript",
    "html"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:aiCodeReview.copyPrompt",
    "onCommand:aiCodeReview.copyPromptLocalChanges",
    "onCommand:aiCodeReview.copyPromptAllFiles",
    "onCommand:aiCodeReview.copyPromptCompareBranches",
    "onCommand:aiCodeReview.checkReviewResult",
    "aiCodeReview.checkScanResult",
    "onCommand:aiCodeReview.openPromptFile",
    "onCommand:aiCodeReview.openChangeFile",
    "onCommand:aiCodeReview.openSettings",
    "onCommand:aiCodeReview.pastePrompt"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aiCodeReview.copyPrompt",
        "title": "Copy AI Prompt",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.copyPromptLocalChanges",
        "title": "Local Changes - Only local changes (use git diff to check)",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.copyPromptAllFiles",
        "title": "All Files - Scan all Files in repo (existing logic)",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.copyPromptCompareBranches",
        "title": "Compare Branches - Compare changes between two branches",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.checkReviewResult",
        "title": "Check Code Review Result",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.openPromptFile",
        "title": "Open Prompt File",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.openChangeFile",
        "title": "Open Change File",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.openSettings",
        "title": "Open Settings",
        "category": "AI Code Review",
        "icon": "$(gear)"
      },
      {
        "command": "aiCodeReview.pastePrompt",
        "title": "Paste Prompt to AI Chat",
        "category": "AI Code Review",
        "icon": "$(send)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiCodeReview",
          "title": "AI Code Review",
          "icon": "$(search-view-icon)"
        }
      ]
    },
    "views": {
      "aiCodeReview": [
        {
          "id": "aiCodeReviewPanel",
          "name": "Code Review",
          "when": "true"
        },
        {
          "id": "aiCodeReviewIssues",
          "name": "Issues",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiCodeReview.openSettings",
          "when": "view == aiCodeReviewPanel",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AI Code Review Assistant",
      "properties": {
        "aiCodeReview.defaultChangeType": {
          "type": "string",
          "enum": [
            "local",
            "commit",
            "branch",
            "all-files"
          ],
          "default": "local",
          "description": "Default change type for code reviews"
        },
        "aiCodeReview.autoCache": {
          "type": "boolean",
          "default": true,
          "description": "Automatically cache review results and preferences"
        },
        "aiCodeReview.severityThreshold": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ],
          "default": "low",
          "description": "Minimum severity level to display issues"
        },
        "aiCodeReview.supportedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "javascript",
            "typescript",
            "html"
          ],
          "description": "Programming languages supported for code review"
        },
        "aiCodeReview.excludeFileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".min.js",
            ".min.css",
            ".map",
            ".lock",
            ".log"
          ],
          "description": "File extensions to exclude from code review (e.g., .min.js, .test.js, .spec.ts)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:examples": "node test-examples/run-review-test.js",
    "package:vsix": "vsce package",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "ovsx publish",
    "publish:all": "npm run publish:vscode && npm run publish:ovsx",
    "publish:prerelease": "vsce publish --pre-release && ovsx publish --pre-release",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "clean": "rimraf dist out *.vsix",
    "prepare": "npm run package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.0.0",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.9.0",
    "rimraf": "^6.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "simple-git": "^3.16.0",
    "uuid": "^11.1.0"
  },
  "volta": {
    "node": "18.20.8"
  }
}
