{
  "name": "ai-code-review-assistant",
  "displayName": "AI Prompt Code Review",
  "description": "Generating AI Code review Prompt. Work with any AI Providers",
  "version": "0.5.1",
  "publisher": "vuquangkhtn",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vuquangkhtn/ai-code-review-assistant.git"
  },
  "homepage": "https://github.com/vuquangkhtn/ai-code-review-assistant#readme",
  "bugs": {
    "url": "https://github.com/vuquangkhtn/ai-code-review-assistant/issues"
  },
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "code review",
    "AI",
    "copilot",
    "amazon-q",
    "cursor-ai",
    "chatgpt",
    "typescript",
    "javascript",
    "html"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:aiCodeReview.copyPrompt",
    "onCommand:aiCodeReview.copyPromptLocalChanges",
    "onCommand:aiCodeReview.copyPromptAllFiles",
    "onCommand:aiCodeReview.copyPromptCompareBranches",
    "onCommand:aiCodeReview.checkReviewResult",
    "onCommand:aiCodeReview.openChangeFile",
    "onCommand:aiCodeReview.openSettings",
    "onCommand:aiCodeReview.pastePrompt"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aiCodeReview.copyPrompt",
        "title": "Copy AI Prompt",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.copyPromptLocalChanges",
        "title": "Local Changes - Only local changes (use git diff to check)",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.copyPromptAllFiles",
        "title": "All Files - Scan all Files in repo (existing logic)",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.copyPromptCompareBranches",
        "title": "Compare Branches - Compare changes between two branches",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.checkReviewResult",
        "title": "Check Code Review Result",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.openPromptFile",
        "title": "Open Prompt File",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.openChangeFile",
        "title": "Open Change File",
        "category": "AI Code Review"
      },
      {
        "command": "aiCodeReview.openSettings",
        "title": "Open Settings",
        "category": "AI Code Review",
        "icon": "$(gear)"
      },
      {
        "command": "aiCodeReview.openIssuesFilter",
        "title": "Filter Issues",
        "category": "AI Code Review",
        "icon": "$(gear)"
      },
      {
        "command": "aiCodeReview.pastePrompt",
        "title": "Paste Prompt to AI Chat",
        "category": "AI Code Review",
        "icon": "$(send)"
      },
      {
        "command": "aiCodeReview.markIssueResolved",
        "title": "Mark as Resolved",
        "category": "AI Code Review",
        "icon": "$(check)"
      },
      {
        "command": "aiCodeReview.markIssueUnresolved",
        "title": "Mark as Unresolved",
        "category": "AI Code Review",
        "icon": "$(close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiCodeReview",
          "title": "AI Code Review",
          "icon": "resources/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "aiCodeReview": [
        {
          "id": "aiCodeReviewPanel",
          "name": "Code Review",
          "when": "true"
        },
        {
          "id": "aiCodeReviewIssues",
          "name": "Issues",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiCodeReview.openSettings",
          "when": "view == aiCodeReviewPanel",
          "group": "navigation"
        },
        {
          "command": "aiCodeReview.openIssuesFilter",
          "when": "view == aiCodeReviewIssues",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aiCodeReview.markIssueResolved",
          "when": "view == aiCodeReviewIssues && viewItem == unresolvedIssue",
          "group": "inline"
        },
        {
          "command": "aiCodeReview.markIssueUnresolved",
          "when": "view == aiCodeReviewIssues && viewItem == resolvedIssue",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aiCodeReview.copyPrompt",
        "key": "cmd+k cmd+g",
        "mac": "cmd+k cmd+g",
        "win": "ctrl+k ctrl+g",
        "linux": "ctrl+k ctrl+g"
      }
    ],
    "configuration": {
      "title": "AI Code Review Assistant",
      "properties": {
        "aiCodeReview.defaultChangeType": {
          "type": "string",
          "enum": [
            "local",
            "commit",
            "branch",
            "all-files"
          ],
          "default": "local",
          "description": "Default change type for code reviews"
        },
        "aiCodeReview.autoCache": {
          "type": "boolean",
          "default": true,
          "description": "Automatically cache review results and preferences"
        },
        "aiCodeReview.severityThreshold": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ],
          "default": "low",
          "description": "Minimum severity level to display issues"
        },
        "aiCodeReview.supportedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "javascript",
            "typescript",
            "html"
          ],
          "description": "Programming languages supported for code review"
        },
        "aiCodeReview.excludeFileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".min.js",
            ".min.css",
            ".map",
            ".lock",
            ".log"
          ],
          "description": "File extensions to exclude from code review (e.g., .min.js, .test.js, .spec.ts)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:examples": "node test-examples/run-review-test.js",
    "package:vsix": "vsce package",
    "publish:vscode": "vsce publish",
    "publish:ovsx": "ovsx publish",
    "publish:all": "npm run publish:vscode && npm run publish:ovsx",
    "publish:prerelease": "vsce publish --pre-release && ovsx publish --pre-release",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "clean": "rimraf dist out *.vsix",
    "prepare": "npm run package"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^8.0.0",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.9.0",
    "rimraf": "^6.0.0",
    "semantic-release": "^24.2.7",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "simple-git": "^3.16.0",
    "uuid": "^11.1.0"
  },
  "volta": {
    "node": "20.19.4"
  }
}
